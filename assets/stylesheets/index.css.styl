@import "./mixin.styl"

body, html {
	margin: 0
  overflow: hidden
}

html {
  margin: 0
  height: 100%
  min-height: 850px
  background-color: #b7b9be
  background-image: linear-gradient(-90deg, #b7b9be 70%, #83868e 100%)
}

body {
  height: 100%
  min-height: 850px
  font-family: "Helvetica Neue TT", "Helvetica Neue", helvetica, sans-serif
  color: #303231
  font-weight: 200
  background-image: url(./radial.png), url(./grain.png)
  background-repeat: no-repeat, repeat
  background-position: center top, left top
  -webkit-font-smoothing: antialiased
}