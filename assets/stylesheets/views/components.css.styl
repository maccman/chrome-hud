@import "../mixin.styl"

#app .components {
  hbox()
  -webkit-box-pack: justify
  padding: 40px
  max-width: 1400px
  border-box()

  section {
    width: 550px
    // background: #FFF
    // border-radius: 4px
    // box-shadow: 0 1px 2px rgba(0,0,0,0.3), 0 0 1px rgba(0,0,0,0.5), inset 0 1px 2px #fff
    // background: linear-gradient(#fff, #fafafa)
  }

  header {
    // background: linear-gradient(#E9E9E9, #BDBDBD)
    border-radius: 4px 4px 0 0
    padding: 5px 6px
    font-weight: bold
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.5)
    color: #4C4C4C
    opacity: 0.6
    font-size: 14px
  }

  article {
    padding: 15px
    font-size: 14px
    border-radius: 4px

    background: linear-gradient(rgba(0,0,0,0.01), rgba(0,0,0,0.05))
    box-shadow: inset 0 1px 2px rgba(0,0,0,0.2), inset 1px 0 1px rgba(0,0,0,0.1), inset -1px 0 1px rgba(0,0,0,0.1), 0 1px 0 rgba(255, 255, 255, 0.3)
  }
}