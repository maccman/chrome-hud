@import "../mixin.styl"

#app .components {
  hbox()
  -webkit-box-pack: justify
  padding: 40px

  section {
    width: 260px
    background: #FFF
    border-radius: 4px
    box-shadow: 0 1px 2px rgba(0,0,0,0.3), 0 0 1px rgba(0,0,0,0.5), inset 0 1px 2px #fff
    background: linear-gradient(#fff, #fafafa)
  }

  header {
    background: linear-gradient(#F8F8F8, #E1E4E5)
    border-radius: 4px 4px 0 0
    padding: 5px 7px
    font-weight: bold
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.9)
    color: darken(#B3B5B9, 20%)
    font-size: 14px
    border-bottom: 1px solid #D6DADE
  }

  article {
    padding: 10px
    font-size: 14px
  }
}